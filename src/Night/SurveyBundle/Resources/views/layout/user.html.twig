{% trans_default_domain 'UserBundle' %}

{% if app.user is not empty %}
    <li class="dropdown">
        <a href="{{ path("night_survey_admin_surveylist") }}" class="dropdown-toggle" role="button" aria-haspopup="true"
           aria-expanded="false">{{ 'trans.surveys' | trans([], 'NightSurveyBundle') }}</a>
    </li>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
           aria-expanded="false">
            <img src="{{ gravatar(app.user.email, 30, 'g') }}"
                 style="padding-right: 0px; margin-top: -10px; margin-bottom: -10px; border-radius: 5px" />
            {{ app.user.username }}</a>
        <ul class="dropdown-menu">
            <li><a href="{{ path('fos_user_profile_show') }}">{{ "security.profile" |trans }}</a></li>
            <li><a href="{{ path('fos_user_security_logout') }}">{{ "security.logout" |trans }}</a></li>
        </ul>
    </li>
{% else %}
    <li>
        <a href="#" data-target="#user-modal" data-toggle="modal">
            {{ "security.login_label"|trans }}
        </a>
    </li>
{% endif %}