{% extends '@NightSurvey/layout/layout.html.twig' %}
{% trans_default_domain 'NightSurveyBundle' %}

{% block body %}
    <div class="page-header"><h1>{{ 'administration.title'|trans }}</h1></div>
    <div class="panel panel-default">
        {% if surveyAdminListDTO.title is not empty %}
            <div class="panel-heading">
                <div class="panel-title">
                    {% block panel_title %}{% endblock %}
                </div>
            </div>
        {% endif %}
        <div class="panel-body">
            {% block admin_content %}
            {% endblock %}
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="footer-nav" style="text-align: center">
                {% block footer_nav %}
                {% endblock %}
            </div>
        </div>
    </div>
    <footer>
        <script type="application/javascript">
            var apiUrl = "{{ path("Api_request") }}";
        </script>
    </footer>
    <div class="modal fade" id="admin-modal" tabindex="-1" role="dialog" aria-labelledby="Admin Modal" style="padding-top: 150px">
        <div class="container"{# style="width: 430px"#}>
            <div class="well center-block" {#style="max-width: 400px" #}id="admin-modal-content">
                <div class="loading"><i class='fa fa-circle-o-notch fa-spin fa-4x'></i></div>
            </div>
        </div>
    </div>
{% endblock %}