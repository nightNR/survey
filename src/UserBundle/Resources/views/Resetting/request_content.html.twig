{% trans_default_domain 'FOSUserBundle' %}
<h1 class="text-center">Reset password</h1>
<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request form-horizontal">
    <div>
        <div class="form-group">
            <div class="col-sm-12">
                <input type="text" id="username" name="username" required="required"
                       placeholder="{{ 'resetting.request.username'|trans }}"
                       class="form-control"/>
            </div>
        </div>
    </div>
    {% if invalid_username is defined %}
        <div class="alert alert-danger col-sm-12">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</div>
    {% endif %}
    <div class="form-group">
        <div class="col-sm-12">
            <input type="submit" id="_submit" name="_submit" value="{{ 'resetting.request.submit'|trans }}"
                   class="btn btn-primary btn-block"/>
        </div>
    </div>
</form>
