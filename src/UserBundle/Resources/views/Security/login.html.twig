{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'UserBundle' %}

{% block fos_user_content %}
    <h1>Login to Your Account</h1>

    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-12">
                <a href="{{ path("hwi_oauth_service_redirect", {service: "facebook"}) }}" class="btn btn-primary btn-block btn-social btn-facebook"><span class="fa fa-facebook"></span>{{ 'security.login.facebook'|trans }}</a>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-12">
                <a href="{{ path("hwi_oauth_service_redirect", {service: "google"}) }}" class="btn btn-primary btn-block btn-social btn-google"><span class="fa fa-google"></span>{{ 'security.login.google'|trans }}</a>
            </div>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="form-group">
            <div class="col-sm-12">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                       placeholder="{{ 'security.login.username'|trans }}"
                       class="form-control"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <input type="password" id="password" name="_password" required="required" class="form-control"
                       placeholder="{{ 'security.login.password'|trans }}"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <div class="checkbox">
                    <label for="remember_me">
                        <input type="checkbox" id="remember_me" name="_remember_me"
                               value="on"/>{{ 'security.login.remember_me'|trans }}
                    </label>
                </div>
            </div>
        </div>
        {% if error %}
            <div class="alert alert-danger col-sm-12">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <div class="form-group">
            <div class="col-sm-12">
                <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
                       class="btn btn-primary btn-block"/>
            </div>
        </div>
    </form>
    <div><a href="{{ path('fos_user_registration_register') }}">Register</a> / <a
                href="{{ path('fos_user_resetting_request') }}">Lost password</a></div>
{% endblock fos_user_content %}
